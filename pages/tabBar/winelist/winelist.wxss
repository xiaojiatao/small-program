/* winelist.wxss */
.wrapper-winelist .banner{
  width:100%;
  height:440rpx;
}
.wrapper-winelist .banner image{
  width:100%;
  height:100%;
}

.wine-box{
  padding:0 40rpx;
}
.wine-box text.title{
  width:100%;
  font-size:28rpx;
  margin:50rpx 0 30rpx;
  color:#5c5c5c;
  display:block;
  position:relative;
  text-align:center;
}
.wine-box text.title::before{
  width:160rpx;
  height:1rpx;
  content: "";
  background:#333;
  position:absolute;
  left:114rpx;
  top:20rpx;
  display:block;
}
.wine-box text.title::after{
  width:160rpx;
  height:1rpx;
  content: "";
  background:#333;
  position:absolute;
  right:114rpx;
  top:20rpx;
  display:block;
}