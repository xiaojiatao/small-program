/**comment.wxss**/
.wrapper-comment{
  padding:0 40rpx 40rpx;
}
.list{
  display:flex;
  align-items: center;
  border-bottom:solid 1px #e5e4e2;
  padding: 20rpx 0 30rpx 0;
}
.list:nth-last-of-type(1){
  border-bottom:none;
  padding-bottom:0;
}
.list:nth-of-type(1)  {
  padding-top:0;
}
.comment-lf{
  width:80rpx;
  height:80rpx;
  flex-shrink: 0;
  margin-right:30rpx;
}
.comment-lf image{
  width:100%;
  height:100%;
}
.comment-rg{
  flex:1;
}
.comment-rg .rg-title{
  display:flex;
  align-items: center;
}
.rg-title .star{
  color:#666;
  flex:1;
}
.rg-title .time{
  color:#666;
  font-size:26rpx;
}
.comment-rg .rg-desc{
  color:#333;
  font-size:26rpx;
}