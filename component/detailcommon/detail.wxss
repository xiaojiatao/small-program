/*detail*/
.detail-box .banner{
  width:100%;
  height:440rpx;
}
.detail-box .banner image{
  width:100%;
  height:100%;
}
.text-box{
  padding: 50rpx 30rpx 40rpx 40rpx;
}
.text-box .title{
    margin-bottom:16rpx;
}
.text-box .title .name{
  color:#222;
  font-size:38rpx;
}
.text-box .title .desc{
  color:#666;
  font-size:28rpx;
}


.more-title{
  width:100%;
  font-size:28rpx;
  margin:50rpx 0 30rpx;
  color:#5c5c5c;
  display:block;
  position:relative;
  text-align:center;
}
.more-title::before{
  width:160rpx;
  height:1rpx;
  content: "";
  background:#333;
  position:absolute;
  left:150rpx;
  top:20rpx;
  display:block;
}
.more-title::after{
  width:160rpx;
  height:1rpx;
  content: "";
  background:#333;
  position:absolute;
  right:150rpx;
  top:20rpx;
  display:block;
}
.more-desc image{
  width:100%;
}